<style>
	.about {
    padding: 100px 0;
    background: 
    radial-gradient(ellipse at center top, rgba(56, 255, 245, 0.1) 0%, transparent 100%),
    linear-gradient(
        180deg,
        #BADAED 0%,
        #C9E2EE 40%,
        #EDF2F5 100% 
    );
    color: #1d1d1f;
    position: relative;
    overflow: hidden;
		max-width: 3200px;
		margin: 0 auto 16px auto;
}

	.about .container {
		position: relative;
		z-index: 2;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr;
		gap: 56px;
		align-items: center;
		text-align: center;
		max-width: 692px;
		margin: 0 auto;
	}

	.about-text h2 {
		font-size: clamp(40px, 5vw, 56px);
		font-weight: 600;
		margin: 0 0 12px 0;
		color: #1d1d1f;
		line-height: 1.07;
		letter-spacing: -0.005em;
	}

	.lead {
		font-size: 21px;
		font-weight: 400;
		color: rgba(29, 29, 31, 0.8);
		margin-bottom: 28px;
		line-height: 1.38;
	}

	.about-text p {
		font-size: 17px;
		line-height: 1.47;
		color: rgba(29, 29, 31, 0.7);
		margin-bottom: 20px;
	}

	.stats {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 32px;
		margin-top: 48px;
		justify-items: center;
	}

	.stat {
		text-align: center;
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		color: #1d1d1f;
		margin-bottom: 0.5rem;
	}

	.stat-label {
		color: rgba(29, 29, 31, 0.7);
		font-size: 0.9rem;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.about-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 500px;
	}

	.visual-element {
		position: relative;
		width: 300px;
		height: 300px;
	}

	.rotating-circle {
		width: 100%;
		height: 100%;
		border: 2px solid rgba(29, 29, 31, 0.15);
		border-top: 2px solid rgba(29, 29, 31, 0.4);
		border-radius: 50%;
		animation: rotate 10s linear infinite;
	}

	.pulse-dot {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 20px;
		height: 20px;
		background: rgba(29, 29, 31, 0.6);
		border-radius: 50%;
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes rotate {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	@keyframes pulse {
		0%, 100% {
			transform: translate(-50%, -50%) scale(1);
			opacity: 1;
		}
		50% {
			transform: translate(-50%, -50%) scale(1.5);
			opacity: 0.7;
		}
	}

	.about .unit-link {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 1;
		text-decoration: none;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.about .unit-link:hover {
		background: rgba(29, 29, 31, 0.02);
	}

	@media (max-width: 768px) {
		.about {
			padding: 64px 0;
		}

		.about-content {
			gap: 48px;
		}

		.about-text h2 {
			font-size: clamp(32px, 7vw, 40px);
			line-height: 1.1;
		}

		.lead {
			font-size: 19px;
			line-height: 1.42;
		}

		.about-text p {
			font-size: 17px;
		}

		.stats {
			grid-template-columns: 1fr;
			gap: 24px;
			margin-top: 40px;
		}

		.about-visual {
			height: 300px;
		}

		.visual-element {
			width: 200px;
			height: 200px;
		}
	}
</style>
