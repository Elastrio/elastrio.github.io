<style>
	.services {
		padding: 100px 0;
		background: #f5f7fa;
	}

	.services-header {
		text-align: center;
		margin-bottom: 64px;
		max-width: 692px;
		margin-left: auto;
		margin-right: auto;
	}

	.services-header h2 {
		font-size: clamp(40px, 5vw, 56px);
		font-weight: 600;
		margin: 0 0 12px 0;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1.07;
		letter-spacing: -0.005em;
	}

	.services-header p {
		font-size: 21px;
		color: rgba(26, 26, 26, 0.6);
		line-height: 1.38;
		margin: 12px auto 0 auto;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 32px;
		max-width: 980px;
		margin: 0 auto;
	}

	.service-card {
		background: linear-gradient(135deg, #ffffff 0%, #f8faff 100%);
		border: 1px solid rgba(102, 126, 234, 0.1);
		border-radius: 24px;
		padding: 3rem 2.5rem;
		text-align: center;
		transition: all 0.4s ease;
		position: relative;
		overflow: hidden;
		box-shadow: 0 8px 32px rgba(102, 126, 234, 0.1);
	}

	.service-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.service-card:hover::before {
		opacity: 1;
	}

	.service-card:hover {
		transform: translateY(-12px);
		border-color: rgba(102, 126, 234, 0.3);
		box-shadow: 0 24px 48px rgba(102, 126, 234, 0.15);
	}

	.service-icon {
		width: 80px;
		height: 80px;
		margin: 0 auto 2rem auto;
		position: relative;
		z-index: 1;
	}

	.service-icon svg {
		width: 100%;
		height: 100%;
		color: #667eea;
		transition: color 0.3s ease;
	}

	.service-card:hover .service-icon svg {
		color: #764ba2;
	}

	.service-card h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		color: #1a1a1a;
		position: relative;
		z-index: 1;
	}

	.service-card p {
		font-size: 1rem;
		line-height: 1.6;
		color: rgba(26, 26, 26, 0.6);
		margin: 0;
		position: relative;
		z-index: 1;
	}

	@media (max-width: 768px) {
		.services {
			padding: 4rem 0;
		}

		.services-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.service-card {
			padding: 2rem;
		}
	}
</style>
