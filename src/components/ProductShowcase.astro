<section class="showcase">
	<div class="container">
		<div class="showcase-grid">
			<!-- Large featured card -->
			<div class="showcase-card large">
				<div class="card-content">
					<h3>Digital Innovation</h3>
					<p>Experience the future of digital solutions with our cutting-edge technology stack.</p>
					<div class="card-links">
						<a href="#services" class="card-link">Learn more</a>
						<a href="#contact" class="card-link secondary">Get started</a>
					</div>
				</div>
				<div class="card-visual">
					<div class="floating-shape shape-1"></div>
					<div class="floating-shape shape-2"></div>
					<div class="floating-shape shape-3"></div>
				</div>
				<a class="unit-link" href="#services" aria-hidden="true" tabindex="-1">&nbsp;</a>
			</div>

			<!-- Medium cards -->
			<div class="showcase-card medium blue">
				<div class="card-content">
					<h4>Web Development</h4>
					<p>Modern, fast, and responsive websites that deliver exceptional user experiences.</p>
					<a href="#services" class="card-link">Explore →</a>
				</div>
				<a class="unit-link" href="#services" aria-hidden="true" tabindex="-1">&nbsp;</a>
			</div>

			<div class="showcase-card medium purple">
				<div class="card-content">
					<h4>Brand Strategy</h4>
					<p>Strategic thinking that transforms ideas into powerful brand experiences.</p>
					<a href="#services" class="card-link">Discover →</a>
				</div>
				<a class="unit-link" href="#services" aria-hidden="true" tabindex="-1">&nbsp;</a>
			</div>

			<!-- Small cards -->
			<div class="showcase-card small orange">
				<div class="card-content">
					<h5>Design</h5>
					<p>Beautiful interfaces</p>
				</div>
				<a class="unit-link" href="#services" aria-hidden="true" tabindex="-1">&nbsp;</a>
			</div>

			<div class="showcase-card small green">
				<div class="card-content">
					<h5>Innovation</h5>
					<p>Future-forward solutions</p>
				</div>
				<a class="unit-link" href="#services" aria-hidden="true" tabindex="-1">&nbsp;</a>
			</div>
		</div>
	</div>
</section>

<style>
	.showcase {
		padding: 100px 0;
		background: #f5f7fa;
		max-width: 3200px;
		margin: 0 auto;
	}

	.showcase-grid {
		display: grid;
		grid-template-columns: repeat(12, 1fr);
		grid-template-rows: repeat(6, 120px);
		gap: 22px;
		max-width: 980px;
		margin: 0 auto;
	}

	.showcase-card {
		border-radius: 24px;
		padding: 2.5rem;
		position: relative;
		overflow: hidden;
		transition: all 0.4s ease;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		color: white;
		text-decoration: none;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

	.showcase-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
	}

	/* Grid positioning */
	.showcase-card.large {
		grid-column: 1 / 8;
		grid-row: 1 / 4;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}

	.showcase-card.medium.blue {
		grid-column: 8 / 13;
		grid-row: 1 / 3;
		background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
	}

	.showcase-card.medium.purple {
		grid-column: 1 / 6;
		grid-row: 4 / 6;
		background: linear-gradient(135deg, #8360c3 0%, #2ebf91 100%);
	}

	.showcase-card.small.orange {
		grid-column: 8 / 11;
		grid-row: 3 / 5;
		background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
	}

	.showcase-card.small.green {
		grid-column: 11 / 13;
		grid-row: 3 / 5;
		background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
	}

	.card-content h3 {
		font-size: 2.5rem;
		font-weight: 700;
		margin: 0 0 1rem 0;
		line-height: 1.2;
	}

	.card-content h4 {
		font-size: 1.8rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		line-height: 1.2;
	}

	.card-content h5 {
		font-size: 1.2rem;
		font-weight: 600;
		margin: 0 0 0.5rem 0;
		line-height: 1.2;
	}

	.card-content p {
		font-size: 1.1rem;
		line-height: 1.5;
		opacity: 0.9;
		margin: 0 0 1.5rem 0;
	}

	.small .card-content p {
		font-size: 0.9rem;
		margin: 0;
	}

	.card-links {
		display: flex;
		gap: 1rem;
		margin-top: auto;
	}

	.card-link {
		color: white;
		text-decoration: none;
		font-weight: 500;
		padding: 0.75rem 1.5rem;
		border-radius: 12px;
		transition: all 0.3s ease;
		background: rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(10px);
	}

	.card-link:hover {
		background: rgba(255, 255, 255, 0.3);
		transform: translateY(-2px);
	}

	.card-link.secondary {
		background: rgba(255, 255, 255, 0.1);
	}

	.card-visual {
		position: absolute;
		top: 0;
		right: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		overflow: hidden;
	}

	.floating-shape {
		position: absolute;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.1);
		animation: float 6s ease-in-out infinite;
	}

	.shape-1 {
		width: 120px;
		height: 120px;
		top: 20%;
		right: 10%;
		animation-delay: 0s;
	}

	.shape-2 {
		width: 80px;
		height: 80px;
		top: 60%;
		right: 25%;
		animation-delay: 2s;
	}

	.shape-3 {
		width: 60px;
		height: 60px;
		top: 40%;
		right: 5%;
		animation-delay: 4s;
	}

	@keyframes float {
		0%, 100% { transform: translateY(0) rotate(0deg); }
		50% { transform: translateY(-20px) rotate(180deg); }
	}

	/* Responsive design */
	@media (max-width: 1024px) {
		.showcase-grid {
			grid-template-columns: repeat(8, 1fr);
			grid-template-rows: repeat(8, 100px);
		}

		.showcase-card.large {
			grid-column: 1 / 9;
			grid-row: 1 / 4;
		}

		.showcase-card.medium.blue {
			grid-column: 1 / 5;
			grid-row: 4 / 6;
		}

		.showcase-card.medium.purple {
			grid-column: 5 / 9;
			grid-row: 4 / 6;
		}

		.showcase-card.small.orange {
			grid-column: 1 / 5;
			grid-row: 6 / 8;
		}

		.showcase-card.small.green {
			grid-column: 5 / 9;
			grid-row: 6 / 8;
		}
	}

	@media (max-width: 768px) {
		.showcase {
			padding: 4rem 0;
		}

		.showcase-grid {
			grid-template-columns: 1fr;
			grid-template-rows: auto;
			gap: 1rem;
		}

		.showcase-card {
			grid-column: 1;
			grid-row: auto;
			min-height: 200px;
			padding: 2rem;
		}

		.card-content h3 {
			font-size: 2rem;
		}

		.card-content h4 {
			font-size: 1.5rem;
		}

		.card-links {
			flex-direction: column;
			gap: 0.5rem;
		}

		.card-link {
			text-align: center;
		}
	}

	/* Apple-style unit link overlay */
	.showcase-card .unit-link {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 1;
		text-decoration: none;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.showcase-card .unit-link:hover {
		background: rgba(255, 255, 255, 0.05);
	}

	.showcase-card .card-content {
		position: relative;
		z-index: 2;
	}

	.showcase-card .card-visual {
		position: absolute;
		top: 0;
		right: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		overflow: hidden;
		z-index: 0;
	}
</style>
